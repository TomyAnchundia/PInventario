@model PInventario.Models.Categoria

@{
    ViewBag.Title = "Details";
}
<br />
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Inicio", "Index", "Profile")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Categoría", "Index", "Categoria")</li>
        <li class="breadcrumb-item active" aria-current="page">Detalles Categoría</li>
    </ol>
</nav>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre categoría
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre_categoria)
        </dd>

    </dl>
</div>
<p>
    <a href="@(Url.Action("Edit", new { id = Model.Id_categoria }))"> <img src="~/Content/imagenes/editar.png" alt="Editar" /></a> |
    <a href="@(Url.Action("Index"))"> <img src="~/Content/imagenes/regresar.png" alt="Regresar" /></a> 

   
</p>
