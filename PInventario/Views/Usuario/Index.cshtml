@model IEnumerable<PInventario.Models.Usuario>

@{
    ViewBag.Title = "Index";
}
<br />
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Inicio", "Index", "Profile")</li>
        <li class="breadcrumb-item active" aria-current="page">Usuario</li>
    </ol>
</nav>
<h3>
    Nuevo Usuario <a href="@(Url.Action("Create"))"> <img src="~/Content/imagenes/crear.png" alt="Crear" /></a>
</h3>
<table class="table">
    <tr>
        <th>
            Papeleria
            @*@Html.DisplayNameFor(model => model.Papeleria.Nombre_papeleria)*@
        </th>
        <th>
            Nombre
        </th>
        <th>
            Apellido
        </th>
        <th>
            Nombre de Usuario
        </th>
        <th>
            Contraseña
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Papeleria.Nombre_papeleria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contrasena)
            </td>
            <td>
                <a href="@(Url.Action("Edit", new { id = item.Id_usuario }))"> <img src="~/Content/imagenes/editar.png" alt="Editar" /></a> |
                <a href="@(Url.Action("Details", new { id = item.Id_usuario }))"> <img src="~/Content/imagenes/detalles.png" alt="Detalles" /></a> |
                <a href="@(Url.Action("Delete", new { id = item.Id_usuario }))"> <img src="~/Content/imagenes/Eliminar.png" alt="Eliminar" /></a>



                @*@Html.ActionLink("Editar", "Edit", new { id = item.Id_usuario }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id_usuario }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_usuario }*@
            </td>
        </tr>
    }

</table>
