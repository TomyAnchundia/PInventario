@model PInventario.Models.Usuario

@{
    ViewBag.Title = "Details";
}
<br />
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Inicio", "Index", "Profile")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Usuario", "Index", "Usuario")</li>
        <li class="breadcrumb-item active" aria-current="page">Detalles Usuario</li>
    </ol>
</nav>



<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Papelería
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Papeleria.Nombre_papeleria)
        </dd>

        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
           Apellido
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Apellido)
        </dd>

        <dt>
            Nombre de usuario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre_usuario)
        </dd>

        <dt>
           Contraseña
        </dt>

        <dd >
            @Html.DisplayFor(model => model.Contrasena)
        </dd>

    </dl>
</div>
<p>
    <a href="@(Url.Action("Edit", new { id = Model.Id_usuario }))"> <img src="~/Content/imagenes/editar.png" alt="Editar" /></a> |
    <a href="@(Url.Action("Index"))"> <img src="~/Content/imagenes/regresar.png" alt="Regresar" /></a>

</p>
