@{
    ViewBag.Title = "Index";
}
<link href="~/Content/css/EstiloLogin.css" rel="stylesheet" type="text/css" />
<script src="https://kit.fontawesome.com/81c347418f.js"
        crossorigin="anonymous"></script>


<div class="modal-dialog text-center">


    <div class="col-sm-8 center-block main-section">

        @{
            if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-danger">
                    @ViewBag.Message
                </div>
            };
        }

        <br />
        <br />

        <div class="modal-content">

            <div class="col-12 user-img">
                <img src="~/Content/imagenes/user.png" alt="imagen de login" />
            </div>

            <form class="col-12" action="/Home/Login" method="post">

                <div class="form-group" id="user-group">
                    <input type="text" name="nombre_usuario" placeholder="Nombre de usuario" />
                </div>


                <div class="form-group" id="contrasena-group">
                    <input type="password" name="password" placeholder="Contraseña" />
                </div>



                <div class="form-group">
                    <button  type="submit" class="btn btn-primary btn-group-sm"> Ingresar</button>
                </div>
            </form>


            <div class="form-group">
                <p>
                    @Html.ActionLink("Continuar como Invitado", "IndexInvitado", "Producto")
                </p>

            </div>





        </div>
    </div>

</div>


