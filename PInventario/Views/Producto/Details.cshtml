@model PInventario.Models.Producto

@{
    ViewBag.Title = "Details";
}
<br />
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Inicio", "Index", "Profile")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Producto", "Index", "Producto")</li>
        <li class="breadcrumb-item active" aria-current="page">Detalles Producto</li>
    </ol>
</nav>


<div>
    <h4>Producto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Categoría
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria.Nombre_categoria)
        </dd>

        <dt>
            Marca
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Marca.Nombre_marca)
        </dd>

        <dt>
            Nombre Prodcuto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre_producto)
        </dd>

        <dt>
            Precio compra
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Precio_compra)
        </dd>

        <dt>
            Precio venta
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Precio_venta)
        </dd>

    </dl>
</div>
<p>
    <a href="@(Url.Action("Edit", new { id = Model.Id_producto }))"> <img src="~/Content/imagenes/editar.png" alt="Editar" /></a> |
    <a href="@(Url.Action("Index"))"> <img src="~/Content/imagenes/regresar.png" alt="Regresar" /></a>

  
</p>
