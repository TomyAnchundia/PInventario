@model IEnumerable<PInventario.Models.Producto>

@{
    ViewBag.Title = "Index";
}

<br />
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Inicio", "Index", "Profile")</li>
        <li class="breadcrumb-item active" aria-current="page">Producto</li>
    </ol>
</nav>

<h3 >
    Nuevo Producto <a href="@(Url.Action("Create"))"> <img src="~/Content/imagenes/crear.png" alt="Crear" /></a>
</h3>
<table class="table">
    <tr>
        <th>
            Categoría
        </th>
        <th>
            Marca
        </th>
        <th>
            Producto
        </th>
        <th>
            Precio compra
        </th>
        <th>
            Precio venta
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Nombre_categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca.Nombre_marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio_compra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio_venta)
            </td>
            <td>



                <a href="@(Url.Action("Edit", new { id = item.Id_producto }))"> <img src="~/Content/imagenes/editar.png" alt="Editar" /></a> |
                <a href="@(Url.Action("Details", new { id = item.Id_producto }))"> <img src="~/Content/imagenes/detalles.png" alt="Detalles" /></a> |
                <a href="@(Url.Action("Delete", new { id = item.Id_producto }))"> <img src="~/Content/imagenes/Eliminar.png" alt="Eliminar" /></a>

            </td>
        </tr>
    }

</table>
