@model IEnumerable<PInventario.Models.Movimiento>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo movimiento", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tipo_movimimiento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo_movimimiento)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_movimiento }) |
