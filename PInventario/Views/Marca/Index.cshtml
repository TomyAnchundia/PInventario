@model IEnumerable<PInventario.Models.Marca>

@{
    ViewBag.Title = "Index";
}

<br />
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Inicio", "Index", "Profile")</li>
        <li class="breadcrumb-item active" aria-current="page">Marca</li>
    </ol>
</nav>


<h3>
    Nueva Marca <a href="@(Url.Action("Create"))"> <img src="~/Content/imagenes/crear.png" alt="Crear" /></a>
</h3>
<table class="table">
    <tr>
        <th>
            Nombre marca
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_marca)
            </td>
            <td>
                <a href="@(Url.Action("Edit", new { id = item.Id_marca }))"> <img src="~/Content/imagenes/editar.png" alt="Editar" /></a> |
                <a href="@(Url.Action("Details", new { id = item.Id_marca }))"> <img src="~/Content/imagenes/detalles.png" alt="Detalles" /></a> |
                <a href="@(Url.Action("Delete", new { id = item.Id_marca }))"> <img src="~/Content/imagenes/Eliminar.png" alt="Eliminar" /></a>



               
            </td>
        </tr>
    }

</table>
